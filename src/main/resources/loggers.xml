<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger"
          class="com.dima.loggers.ConsoleEventLogger">
    </bean>

    <bean id="fileEventLogger"
          class="com.dima.loggers.FileEventLogger"
          init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger"
          class="com.dima.loggers.CacheFileEventLogger"
          parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="5"/>
    </bean>

    <bean id="combinedEventLogger"
          class="com.dima.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger" />
            </list>
        </constructor-arg>
    </bean>

</beans>